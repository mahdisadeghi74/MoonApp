<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="storyView">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvStoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="asas"
                android:textColor="?attr/textColorBase"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_above_normal"
                android:paddingStart="@dimen/margin_above_normal"
                android:paddingEnd="@dimen/margin_above_normal"
                />

            <TextView
                android:id="@+id/tvStoryAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvStoryTitle"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="mahdi sadeghi"
                android:textColor="?attr/textColorBase"
                android:textSize="@dimen/text_size_above_normal"
                android:textStyle="normal"
                android:paddingStart="@dimen/margin_above_normal"
                android:paddingEnd="@dimen/margin_above_normal"
                />

            <TextView
                android:id="@+id/tvStoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvStoryTitle"
                app:layout_constraintStart_toEndOf="@+id/tvStoryAuthor"
                tools:text="1399/99/99"
                android:textColor="?attr/textColorBase"
                android:textSize="@dimen/text_size_above_normal"
                android:textStyle="normal"
                android:paddingStart="@dimen/margin_above_normal"
                android:paddingEnd="@dimen/margin_above_normal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvStoryAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/text_size_above_normal"
                tools:text="ad;fkd;slf"
                android:textColor="?attr/textColorBase"
                android:id="@+id/tvStoryContent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>