<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBase"
    android:paddingBottom="16dp"
    android:transitionName="storyView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title"
        android:textStyle="bold"
        android:textColor="?attr/textColorBase"
        android:textSize="@dimen/text_size_title"
        android:padding="@dimen/margin_above_normal"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tvStoryTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_above_large"
        android:paddingStart="@dimen/padding_above_normal"
        android:paddingEnd="@dimen/padding_above_normal"
        android:maxLines="6"
        android:ellipsize="end"
        android:textColor="?attr/textColorBase"
        android:id="@+id/tvStoryContent"
        app:layout_constraintTop_toBottomOf="@+id/tvStoryTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_above_normal"
        android:paddingStart="@dimen/padding_above_normal"
        android:paddingEnd="@dimen/padding_above_normal"
        android:maxLines="6"
        android:ellipsize="end"
        android:textColor="?attr/textColorBase"
        android:id="@+id/tvStoryWriter"
        app:layout_constraintTop_toBottomOf="@+id/tvStoryContent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvStoryWriter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvStoryWriter"
        android:drawableEnd="@drawable/ic_clapping_fill"
        android:paddingEnd="@dimen/padding_above_normal"
        android:paddingStart="@dimen/padding_above_normal"
        android:drawablePadding="@dimen/padding_normal"
        android:textColor="?attr/textColorBase"
        android:drawableTint="?attr/textColorBase"
        tools:text="127"
        android:id="@+id/tvClapsCount"
        tools:targetApi="m" />
</androidx.constraintlayout.widget.ConstraintLayout>