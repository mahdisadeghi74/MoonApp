<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_above_normal"
    android:background="?attr/colorBase">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:paddingTop="@dimen/margin_above_normal"
        android:paddingBottom="@dimen/margin_above_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:textColor="?attr/textColorBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/text_size_above_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chbJoinRequest"
        android:text="@string/username"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/chbJoinRequest"/>
</androidx.constraintlayout.widget.ConstraintLayout>